
<%- include('partials/header', { title: "Agregar Detalle Perdidas" } )%>


<div class="container theme-showcase" role="main">

        

<form action="guardarPrecio" method="post">


    <div class="form-group row">
        <label for="fecha" class="col-sm-2 col-form-label">Fecha</label>
        <div class="col-sm-6">

            <select class="form-control" name="fecha" id="fecha">
                <%# console.log(fechas)%>
                <% for(var i = 0; i < fechas.length; i++) { %>        
                    <option value= <%= fechas[i].fecha %>  >  <%= fechas[i].mes_y_anio %>   </option>        
                <% } %>
            </select>
        </div>
    </div>


    <div class="form-group row">
        <label for="id" class="col-sm-2 col-form-label">Precio USD </label>
        <div class="col-sm-6">
            <input type="text" class="form-control" id="precio" name="precio">
        </div>
    </div>

    <input type="hidden" id="accion" name="accion" value="agregar">
    <button class="btn btn-s btn-success"  onclick= "" type="submit"> Guardar Precio  </button>
    <a class="btn btn-s btn-warning"  href="/modificarPrecios"> Cancelar  </a>
    
</div>
</form>




<div class="container theme-showcase" role="main">

    <table id="customers">
        <tr>
            
            <th>Fecha</th>
            <th>Precio</th>            
        </tr>

        <% if( DetallePerdidas.length > 0 ) {
            for ( var i=0 ; i <DetallePerdidas.length ; i++) { %>
                <tr>
             
                    <td><%= DetallePerdidas[i].fecha %></td>
                    <td><%= DetallePerdidas[i].precio %></td>         
                    <td><button class="btn btn-xs btn-success"  onclick= " window.location = '../agregarDetallePerdida/<%= precios[i].fecha %>'" > Modificar Precio  </button></td> 
                </tr>
            <% } } %>
    </table>

</div>






</body>

