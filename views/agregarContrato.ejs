<form action="editarContrato" method="post">

    <div class="form-group row">
        <label for="id" class="col-sm-2 col-form-label">ID</label>
        <div class="col-sm-6">
            <input type="text" readonly class="form-control" id="id"  value="<%= id[0].next_id %>">
        </div>
    </div>


    <div class="form-group row">
        <label for="fecha" class="col-sm-2 col-form-label">Fecha</label>
        <div class="col-sm-6">
            <select class="form-control" id="fecha">
                <option>Noviembre 2021</option>
                <option>Diciembre 2021</option>
                <option>Enero 2022</option>
                <option>Febrero 2022</option>
                <option>Marzo 2022</option>
                <option>Abril 2022</option>
                <option>Mayo 2022</option>
                <option>Junio 2022</option>
            </select>
        </div>
    </div>


    <div class="form-group row">
        <label for="id" class="col-sm-2 col-form-label">Nombre Contrato</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" id="nombre_contrato"  >
        </div>
    </div>


    <div class="form-group row">
        <label for="id" class="col-sm-2 col-form-label">Empresa</label>
        <div class="col-sm-6">
            <select class="form-control" id="empresa">
                <option>ENSA</option>
                <option>EDEMET</option>
                <option>EDECHI</option>
            </select>
            
        </div>
    </div>

    <div class="form-group row">
        <label for="id" class="col-sm-2 col-form-label">Potencia Contratada</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" id="potencia_contratada" >
        </div>
    </div>


    <div class="form-group row">
        <label for="id" class="col-sm-2 col-form-label">Categoria Precio</label>
        <div class="col-sm-6">
            
                <select class="form-control" name="cars" id="categoria_precio">
                    <%# console.log(fechas)%>
                    <%# console.log(fecha)%>
    
                    <% for(var i = 0; i < categoriasPrecio.length; i++) { %>
            
                        <option value= <%= categoriasPrecio[i].categoria_precio %>   <%#= fechas[i].fecha == fecha ? 'selected' : ''  %>     > <%= categoriasPrecio[i].categoria_precio %>    </option>
            
                    <% } %>
                    </select>
                    
        </div>
    </div>


    <div class="form-group row">
        <label for="id" class="col-sm-2 col-form-label">Precio</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" id="precio" >
        </div>
    </div>

    <button class="btn btn-s btn-success"  onclick= "" > Guardar Contrato  </button>
    <a class="btn btn-s btn-warning"  href="/modificaContratos"> Cancelar  </a>
    
</div>
</form>




