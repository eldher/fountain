    <div class="form-group row">
        <label for="id" class="col-sm-2 col-form-label">Precio Base USD/MWh</label>
        <div class="col-sm-6">
            <input type="text" readonly class="form-control" id="precio_base_usd_mwh" name="precio_base_usd_mwh">
